@model WebThoiTrang.Models.HangSanXuat
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var anhSanXuat = Model.AnhHSX;
    var ImagePath = "~/Areas/Admin/Assets/images/" + anhSanXuat;
}

<h2>Sửa thông tin nhà sản xuất</h2>

<script src="~/wwwroot/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("Edit", "HangSanXuats", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaHSX)

    @*<div class="form-group">
            <label>Danh mục</label>
            <div class="col-md-10">
                @Html.DropDownList("MaDM", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <label>Tên hãng sản xuất</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenHSX, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHSX, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Số điện thoại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienThoaiHSX, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DienThoaiHSX, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EmailHSX, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailHSX, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChiHSX, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChiHSX, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Ảnh</label>
        <div class="col-md-10">
            <img id="output" class="img-rounded" alt="Ảnh" width="180" height="200" src="@Url.Content(ImagePath)" />
            <p><label for="ufile" style="cursor:pointer;">Chọn file ảnh</label></p>
            <input type="file" name="ImageFile" id="ufile" style="display:none;" onchange="loadFile(event)" />
            @if (Model.AnhHSX != null && Model.AnhHSX != "")
            {
                <input type="text" name="oldImage" style="display:none;" value="@Url.Content(anhSanXuat)" />
            }
            else
            {
                <input type="text" name="oldImage" style="display:none;" value="" />
            }
        </div>
    </div>

    <div class="form-group">
        <label>Thông tin</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ThongTinHSX, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ThongTinHSX, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
        <label>Khuyến mãi</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PhanTramKM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhanTramKM, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Số lượng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Ngày tạo</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NgayTao, new { @readonly = "readonly" })
        </div>
    </div>*@
    @if (ViewBag.Error != null)
    {
        <div class="row py-1 alert alert-danger text-center">
            <p class="text-center title-error">@ViewBag.Error</p>
        </div>
    }

    <div class="py-3 pb-4 border-bottom">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn border button" href="/Admin/HangSanXuats">Trở lại</a>
            </div>
        </div>
    </div>
</div>
}

<script>var loadFile = function (event) {
        var image = document.getElementById('output')
        image.src = URL.createObjectURL(event.target.files[0])
    }</script>

